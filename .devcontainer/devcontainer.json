{
  "name": "BAI Env",
  "image": "mcr.microsoft.com/devcontainers/python:0-3.11-bullseye",
  "features": {
    "ghcr.io/itsmechlark/features/postgresql:1": {
      "version": "latest",
      "username": "postgres",
      "password": "password", 
      "dbName": "postgres"
    }
  },
  // Ejecutar un script para instalar librer√≠as y crear las DBs
  "postCreateCommand": "pip install ipython-sql psycopg2-binary pandas sql-queries numpy", 
  "postStartCommand": "chmod +x ./.devcontainer/create_dbs.sh && ./.devcontainer/create_dbs.sh",

  "customizations": {
    "codespaces": {
      "openFiles": [
        "README.md"
      ]
    }
  }
}